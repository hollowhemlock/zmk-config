ZMK_COMBO(l_fun,   &sl L_FUN,        RH0 RH1,     L_COLEMAK_DH QWERTY L_NAV, COMBO_TERM_SLOW)

/* Other symbols (vertical combos) */
ZMK_COMBO(at,    &kp AT,        LT3 LM3,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(hash,  &kp HASH,      LT2 LM2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(dllr,  &kp DLLR,      LT1 LM1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(prcnt, &kp PRCNT,     LT0 LM0,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)

ZMK_COMBO(caret, &kp CARET,     RT0 RM0,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(plus,  &kp PLUS,      RT1 RM1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(star,  &kp STAR,      RT2 RM2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(amps,  &kp AMPS,      RT3 RM3,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)

ZMK_COMBO(grave, &kp GRAVE,     LM3 LB3,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(bslh,  &kp BSLH,      LM2 LB2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(equal, &kp EQUAL,     LM1 LB1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(tilde, &kp TILDE,     LM0 LB0,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)

ZMK_COMBO(under, &kp UNDER,     RM0 RB0,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(minus, &kp MINUS,     RM1 RB1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(excl,  &kp EXCL,      RM2 RB2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(pipe,  &kp PIPE,      RM3 RB3,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)