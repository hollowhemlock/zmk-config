/*                KEY POSITIONS
  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <100>;

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 35

// make homerow combos tap-only (so mods can be chorded correctly)
// match to homerow mods on default keymap

// │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
// │ LS  LC  LA  LG  --- │ │ --- RG  RA  RC  RS  │
#define HRC_ESC    &hml        LA(LCTRL) ESC
#define HRC_ENTER  &hml        LA(LGUI)  ENTER
#define HRC_LPAR   &hmr        RA(RGUI)  LPAR
#define HRC_RPAR   &hmr        RA(RCTRL) RPAR

/* Punctuation (horizontal left hand) */

ZMK_COMBO(ret,   &key_repeat,   LT3 LT2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(tab,   &kp TAB,       LT2 LT1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)
// ZMK_COMBO(mouse, &smart_mouse,  LT3 LT1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)

ZMK_COMBO(esc,   HRC_ESC,       LM3 LM2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(ent,   HRC_ENTER,     LM2 LM1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)

ZMK_COMBO(cut,   &kp LC(X),     LB3 LB1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_SLOW)
ZMK_COMBO(copy,  &kp LC(INS),   LB3 LB2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(paste, &kp LS(INS),   LB2 LB1,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)

/* Horizontal combos - right hand */
// Unused
// ZMK_COMBO(bspc,  &kp BSPC,      RT1 RT2,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)
// ZMK_COMBO(del,   &kp DEL,       RT2 RT3,     L_COLEMAK_DH QWERTY L_NAV  L_NUMBER, COMBO_TERM_FAST)

ZMK_COMBO(lpar,  HRC_LPAR,      RM1 RM2,     L_COLEMAK_DH QWERTY L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(rpar,  HRC_RPAR,      RM2 RM3,     L_COLEMAK_DH QWERTY L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(lt,    &kp LT,        RM1 RM2,     L_NAV, COMBO_TERM_FAST) // from urob used on his nav layer
ZMK_COMBO(gt,    &kp GT,        RM2 RM3,     L_NAV, COMBO_TERM_FAST) // from urob used on his nav layer

ZMK_COMBO(lbkt,  &kp LBKT,      RB1 RB2,     L_COLEMAK_DH QWERTY L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(rbkt,  &kp RBKT,      RB2 RB3,     L_COLEMAK_DH QWERTY L_NUMBER, COMBO_TERM_FAST)
ZMK_COMBO(lbrc,  &kp LBRC,      RB1 RB2,     L_NAV, COMBO_TERM_FAST) // from urob used on his nav layer
ZMK_COMBO(rbrc,  &kp RBRC,      RB2 RB3,     L_NAV, COMBO_TERM_FAST) // from urob used on his nav layer

